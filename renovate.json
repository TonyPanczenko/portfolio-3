{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "bump",
      "bumpVersion": "minor"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "in-range-only"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "bump",
      "bumpVersion": "minor"
    }
  ],
  "major": {
    "stabilityDays": 60,
    "separateMultipleMajor": true
  },
  "minor": {
    "groupName": "minor-all"
  },
  "patch": {
    "groupName": "patch-all",
    "rangeStrategy": "in-range-only",
    "automerge": true
  }
}
